img,object,embed{max-width:100%;}
img{height:auto;}

/* slide 1 */

.slide1 {
	background:url(../img/slide1/bg1.jpg) no-repeat center center fixed;
	-webkit-background-size:cover;
	-moz-background-size:cover;
	-o-background-size:cover;
	background-size:cover;
	height: 100%;
	width: 100%;
	overflow-x: hidden
}

.gokailogo {
	width:314px;
	position: relative;
	left: 40%;
	margin: 100px 0 30px;
}

#gokaidesc{color:white;position: relative; 	left: 35%;}
#gokaidesc h2{font-weight:bold;font-size:2.5em;margin:0 0 -5px;text-shadow: 1px 1px 1px #000;}
#gokaidesc p{font-size:1.000em;width:500px;text-shadow: 1px 1px 1px #000;}

/* group shot */

.group {
	background:url(../img/group.png) no-repeat center center fixed;
	-webkit-background-size:cover;
	-moz-background-size:cover;
	-o-background-size:cover;
	background-size:cover;
	height: 500px;
	width: 100%;
	overflow-x: hidden
}

/* gokai red */

.slide2 {
	background: #fff4f5 url(../img/slide2/red.png) no-repeat left top;
	height: 100%;
	width: 100%;
	overflow-x: hidden;
	clear:both;
}
#gokaired{float: right;margin: 100px 100px 0;}
#gokaired h2{font-weight:400;font-size:3.375em;margin: 0 0 0px;}
#gokaired h3{font-size:3em;color:#ff001e;margin:0 0 -10px;font-family:'Roboto Slab',serif;}
#gokaired p{font-size:1.000em;width:500px;}
#gokaired img{padding:1px;background:#ffffff;border:1px solid #d9d9d9;border-radius:5px;}

